        local function updatePlayerButtons()
            for _, child in ipairs(scrollingFrame:GetChildren()) do
                if child:IsA("TextButton") then
                    child:Destroy()
                end
            end

            local yOffset = 0
            for _, plr in ipairs(Players:GetPlayers()) do
