        if not hand or not hand:IsDescendantOf(workspace) then return end

        for _, targetName in pairs(getgenv().AutoKillTargets) do -- Iterar sobre los nombres de los targets seleccionados
            if getgenv().AutoKillTargets[targetName] then -- Verificar si el target está marcado como true
                local targetPlayer = Players:FindFirstChild(targetName) -- Obtener el objeto Player real
                if targetPlayer and targetPlayer.Character then
